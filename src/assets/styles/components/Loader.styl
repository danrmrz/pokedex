@keyframes rotation {
  0% {
    transform rotate(0deg)
  }
  50% {
    transform rotate(1080deg)
  }
  51% {
    transform rotate(1080deg)
  }
  100% {
    transform rotate(0deg)
  }
}

.loader
  display flex
  width 100%
  height 100vh
  justify-content center
  align-items center

  &__poke-ball 
    display flex
    height 250px
    width 250px
    flex-wrap wrap
    justify-content center
    align-items center
    border-radius 50%
    animation rotation 2.5s infinite

    .red,.white
      width 100%
      height 48%
      background-color #707070

    &--red
      border-bottom 5px solid #ffffff
      border-radius 250px 250px 0 0

    &--white
      border-top 5px solid #ffffff
      border-radius 0 0 250px 250px

    &--dot
      width 35%
      height 35%
      margin -50% 0
      border-radius 50%
      z-index 1
      background-color #ffffff