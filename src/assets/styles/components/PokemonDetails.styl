.pokemon-details
  display flex
  margin 20px 0
  flex-wrap wrap
  justify-content center

  &__button
    width 100%
    height 55px
    margin-bottom -100%
    z-index 1

    &--image
      margin-top 20px
      margin-left 15px

  &__image
    display flex
    width 90%
    flex-direction column

    &--id
      display flex
      margin-bottom -10%
      justify-content flex-end
      align-items center
      font-size 50px
      color rgba(0, 0, 0, 0.25)

      &-img
        height 50px
    
    &--img
      min-height 300px
      height calc(100vw - 100px)
      max-height 450px
      filter drop-shadow(1px 3px 10px #000)
  
  &__name
    width 100%
    text-align center
    font-size 35px
    font-weight 500
    color #707070
  
  &__title
    width 80%
    font-size 18px
    font-weight 400
    color #707070

  &__types
    display flex
    width 80%
    flex-wrap wrap
    margin 0
    padding 0

    li
      min-width 30%
      margin 0px 15px 10px 0px
      padding 3px 15px
      text-align center
      background-color #858585
      border-radius  15px
      list-style none

      span
        font-size 16px
        color #ffffff

  &__stats
    width 80%
    border-radius 10px
    box-shadow 0px 0px 10px -5px #000

    &--info
      margin 20px
      padding 15px
      background-color #1D84D4
      border-radius 5px
      color #ffffff

      &-attributes
        display flex
        flex-wrap wrap
        justify-content space-between
        margin 0
        padding 0

        li
          list-style none
          margin-bottom 10px
      
      &-abilities
        display flex
        flex-wrap wrap
        margin 0
        padding 0

        li
          margin 10px 15px 10px 0px
          padding 1px 15px
          text-align center
          background-color #ffffff
          border-radius  15px
          list-style none

          span
            font-size 14px
            color #1D84D4

    &--stats
      margin 0 20px 20px 20px 
      padding 15px
      background-color #707070
      border-radius 5px
      color #ffffff
      
      li
        list-style none
