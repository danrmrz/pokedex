.searcher
  display flex
  width 100%
  justify-content center
  align-items center

  &__input 
    width 65%
    height 35px
    margin 15px 0
    padding 0 15px
    border-radius 20px 0 0 20px
    border none
    filter drop-shadow(0px 1px 2px #303030)
    color #707070
    
  &__input::placeholder 
    font-weight 500
    color #b0b0b0
  
  &__button
    width 45px
    height 35px
    border none 
    border-radius 0 20px 20px 0
    background-color #e53935
    filter drop-shadow(1px 1px 2px #303030)

    img
      height 25px
    