@keyframes rotation {
  0% {
    transform rotate(0deg)
  }
  50% {
    transform rotate(1080deg)
  }
  51% {
    transform rotate(1080deg)
  }
  100% {
    transform rotate(0deg)
  }
}

.mini-loader
  display flex
  width 100%
  height 100px
  justify-content center
  align-items center

  &__poke-ball 
    display flex
    height 50px
    width 50px
    flex-wrap wrap
    justify-content center
    align-items center
    border-radius 50%
    animation rotation 2.5s infinite 

    .red,.white
      width 100%
      height 45%
      background-color #707070

    &--red
      border-bottom 2px solid #ffffff
      border-radius 50px 50px 0 0

    &--white
      border-top 2px solid #ffffff
      border-radius 0 0 50px 50px

    &--dot
      width 35%
      height 35%
      margin -50% 0
      border-radius 50%
      z-index 1
      background-color #ffffff