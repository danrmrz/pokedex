.pokemon-card
  width 45%
  min-height 165px
  margin 10px 5px
  border-radius 10px
  background-color #97CBAE
  overflow hidden
  text-decoration none

  &__image
    &--background
      display flex
      width 100%
      height 50%
      justify-content center
      align-items center
      background-color rgba(255, 255, 255, 0.8)
      border-radius 10px 10px 50% 50%

      img
        width 50%
        margin 5px 0
  
  &__info
    display flex
    width 100%
    height 50%
    flex-direction column
    justify-content space-evenly
    align-items center

    &--name
      display flex
      justify-content center
      align-items center
      width 75%
      height 25px
      border-radius 13px
      background-color rgba(255, 255, 255, 0.8)
      font-size 1rem
      color #707070

    &--number
      display flex
      align-items center
      font-size .5rem
      color #707070

      img
        width 10px
        height 10px
        margin-right 2px